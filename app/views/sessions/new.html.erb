<h1>Login</h1>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Login" %>
  </div>
<% end %>
<!DOCTYPE html>
<html>
<head>
  <title>FilesHouse</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash.any? %>
    <div class="flash-messages">
      <% flash.each do |type, message| %>
        <p class="message <%= type %>"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <% if current_user %>
    <p>
      Hi <%= current_user.email %>, please:
      <%= link_to "upload new file", new_file_path %>
      <%= link_to "review all files", files_path %>
      <%= link_to "Logout", logout_path, method: :delete, data: { confirmation: "Are you sure?" } %>
    </p>
  <% else %>
    <p>
      Hi guest, you can:
      <%= link_to "Login", login_path %>
    </p>
  <% end %>

<%= yield %>

</body>
</html>
